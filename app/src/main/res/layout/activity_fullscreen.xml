<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    tools:context=".FullscreenActivity"
    android:id="@+id/full_screen"
    android:screenOrientation="landscape"
    android:background="@drawable/start_screen_background">

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="PARENT"
        android:textColor="#ff000000"
        android:id="@+id/parent_button"
        android:background="#40FFFFFF"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enabled="true"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:textColor="#000000"
        android:background="#00000000"
        android:id="@+id/kindyButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <ImageView
        android:visibility="invisible"
        android:layout_marginLeft="50dp"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/play_star"
        android:background="@drawable/play_star"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:visibility="invisible"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/yellow_arrow"
        android:background="@drawable/yellow_arrow"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/play_star"
        android:layout_toStartOf="@+id/play_star"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
